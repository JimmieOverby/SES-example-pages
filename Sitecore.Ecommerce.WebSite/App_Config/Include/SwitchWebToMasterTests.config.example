<?xml version="1.0" encoding="utf-8" ?>
<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/" xmlns:set="http://www.sitecore.net/xmlconfig/set/">
  <sitecore>
    <sites>
      <site name="mvpwebstore" set:database="master" />
      <site name="secondwebstore" set:database="master" />
      <site name="thirdwebstore" set:database="master" />
    </sites>
    <search>
      <configuration>
        <indexes>
          <index id="mvpwebstore products" type="Sitecore.Search.Index, Sitecore.Kernel">
            <locations hint="list:AddCrawler">
              <web type="Sitecore.Ecommerce.Search.DatabaseCrawler, Sitecore.Ecommerce.Kernel">
                <patch:delete />
              </web>
            </locations>
          </index>
        </indexes>
      </configuration>
    </search>
  </sitecore>
</configuration> 
